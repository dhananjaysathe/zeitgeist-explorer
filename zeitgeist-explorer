from gi.repository import Gtk
import gettext

from zgexplorer.window import ExplorerMainWindow

def main():
	gettext.install('zeitgeist-explorer', unicode=True)
	ExplorerMainWindow()
	Gtk.main()	

if __name__ == '__main__':
	try:
		main()
	except KeyboardInterrupt:
		print 'Bye...'
